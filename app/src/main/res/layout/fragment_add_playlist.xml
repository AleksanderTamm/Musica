<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="16dp"
    card_view:cardBackgroundColor="@color/purple_700"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- hiljem muudan width, height jne-->


        <ImageView
            android:src="@drawable/ic_button_unchecked"
            android:id="@+id/selectSong"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/SongTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song of Song"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/selectSong"
            android:layout_toRightOf="@+id/selectSong"/>

        <TextView
            android:id="@+id/Artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arty McArt"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_toEndOf="@+id/selectSong"
            android:layout_toRightOf="@+id/selectSong"
            android:layout_below="@id/SongTitle"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>